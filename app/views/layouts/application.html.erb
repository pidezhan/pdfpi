<!DOCTYPE html>
<html>
<head>
  <title><%= get_title %> </title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
	<script type="text/javascript">

	  var _gaq = _gaq || [];
		var pluginUrl = 
		 '//www.google-analytics.com/plugins/ga/inpage_linkid.js';
		_gaq.push(['_require', 'inpage_linkid', pluginUrl]);
	  _gaq.push(['_setAccount', 'UA-37331499-1']);
	  _gaq.push(['_trackPageview']);

	  (function() {
	    var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
	    ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
	    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
	  })();

	</script>
</head>
<body>
	<div class="container">
		
		<div class="row">
			<div class="span2"> 
				<%= link_to root_url do %>
					<%= image_tag "logo.png" %>
				<% end %> </div>
			<div class="span2 offset7" style="padding: 10px 0px">
				<div id="fb-root"></div>
				<div class="fb-like" data-send="true" data-layout="button_count" data-width="450" data-show-faces="true" data-font="verdana"></div>
			</div>
			<div class="span1" style="padding: 10px 0px">
				<div class="g-plusone" data-annotation="none" data-width="300"></div>
			</div>
		</div>
			<!-- Place this tag where you want the +1 button to render. -->
	</div>
	<script>(function(d, s, id) {
	  var js, fjs = d.getElementsByTagName(s)[0];
	  if (d.getElementById(id)) return;
	  js = d.createElement(s); js.id = id;
	  js.src = "//connect.facebook.net/en_US/all.js#xfbml=1";
	  fjs.parentNode.insertBefore(js, fjs);
	}(document, 'script', 'facebook-jssdk'));</script>
	<!-- Place this tag after the last +1 button tag. -->
	<script type="text/javascript">
	  (function() {
	    var po = document.createElement('script'); po.type = 'text/javascript'; po.async = true;
	    po.src = 'https://apis.google.com/js/plusone.js';
	    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(po, s);
	  })();
	</script>
</div>
<div id="nav">
	<div class="container">
		<ul>
			<li><%= link_to "Home", root_url, :class => (controller_name == "home" and action_name == "index" ? "active" : "") %></li>
    	<li><%= link_to "Combine PDFs", combine_path, :class => (controller_name == "home" and action_name == "combine" ? "active" : "") %> </li>
    	<li><%= link_to "Split PDF", split_path, :class => (controller_name == "home" and action_name == "split" ? "active" : "") %> </li>
		</ul>
	</div>
</div>
