
<div class="row" style="margin-bottom: 5px" id="upload_<%= upload.id %>">

	<div class="col-md-2 handle">[ <span class="glyphicon glyphicon-move"></span> drag here to re-order ] </div>
	<div class="col-md-8"><%= upload.upload_file_name %></div>
	<div class="col-md-2"><%= link_to raw("<span class='glyphicon glyphicon-trash'></span>"), upload, :method => "DELETE", :class => "btn btn-sm btn-danger", :remote => true, :disable_with => "Deleting" %></div>
</div>
